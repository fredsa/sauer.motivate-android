<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/account_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/radio_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_parent" />

        <RadioButton
            android:id="@+id/radio_child"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_child" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/child_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/parent_email_addresses" />

        <include layout="@layout/parent_email" />

        <LinearLayout
            android:id="@+id/parent_emails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>

        <TextView
            android:id="@+id/add_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_email"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>
 />

</LinearLayout>